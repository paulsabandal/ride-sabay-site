    <script type="text/javascript">
      var slider = document.getElementById("earn-range");
      slider.onchange = function(event) {
        var earning = document.getElementById("range-earnings");
        var item = document.querySelector('.range-labels li:nth-child(' + slider.value +')');
        
        document.querySelectorAll('.range-labels li.is-strong').forEach(function(list) {
          list.classList.remove('is-strong');
        })

        item.classList.add("is-strong");

        if (slider.value == 1) {
          earning.innerText = "₱528.00";
        } else if (slider.value == 2) {
          earning.innerText = "₱792.00";
        } else if (slider.value == 3) {
          earning.innerText = "₱1,056.00";
        } else if (slider.value == 4) {
          earning.innerText = "₱1,320.00";
        } else if (slider.value == 5) {
          earning.innerText = "₱1,804.00";
        } else if (slider.value == 6) {
          earning.innerText = "₱1,958.00";
        }

      }
    </script>
